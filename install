#!/bin/bash
wget -qO- https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor > microsoft.asc.gpg
sudo mv microsoft.asc.gpg /etc/apt/trusted.gpg.d/
wget -q https://packages.microsoft.com/config/debian/8/prod.list
sudo mv prod.list /etc/apt/sources.list.d/microsoft-prod.list
sudo chown root:root /etc/apt/trusted.gpg.d/microsoft.asc.gpg
sudo chown root:root /etc/apt/sources.list.d/microsoft-prod.list
sudo apt-get update
sudo apt-get -y install gdb tree vsftpd ftp gnuplot-x11 gcc okular vscode g++ gfortran openjdk-8-jdk gnuplot python python3 octave git ssh vim vim-gnome mpich python-pip aria2 python3-pip llvm clang nvidia-smi nvidia-cuda-dev nvidia-cuda-toolkit nvidia-nsight nvidia-visual-profiler engauge-digitizer flac lame ffmpeg shntool golang klatexformula gnash inkscape dotnet-sdk-2.1
pip install -i https://pypi.tuna.tsinghua.edu.cn/simple/ sympy vtk scipy scikit-learn numpy matplotlib dataframe mayavi
pip3 install -i https://pypi.tuna.tsinghua.edu.cn/simple/ sympy vtk scipy scikit-learn numpy matplotlib dataframe mayavi

#starUML gimp 微信 TIM 百度网盘 迅雷
#ssh-key -t rsa -C "coiggahou@foxmail.com"
#ssh -T git@github.com

